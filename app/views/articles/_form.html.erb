
<div class="container">
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
        <ul>
          <% article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(model: article, class: "shadow p-3 mb-3 bg-dark rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :title, class: "form-control shadow rounded" %>
            </div>
        </div>
        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_area :description, rows: 10, class: "form-control shadow rounded" %>
            </div>
        </div>
        <div class="form-group row">
          <%= form.label :category, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :category, class: "form-control shadow rounded" %>
            </div>
        </div>
        <div class="form-group row row justify-content-center">
            <%= form.submit class: "btn btn-secondary" %>
        </div>
        <%= link_to 'Back to topics', articles_path %>
      <% end %>
    </div>
  </div>
</div>
