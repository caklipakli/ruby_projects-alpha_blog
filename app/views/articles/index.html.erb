<div id="page-contetnt">
  <h1 class = "text-center">Topics</h1>
  <br>
  <div class="form-group row row justify-content-center">
    <%= link_to 'Create new topic', new_article_path, class: "btn btn-outline-warning" %>
  </div>

  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="card text-center">
            <div class="card-header font-italic">Category: 
              <%=article.category%>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%=link_to article.title, article_path(article), class: "text-danger"%></h5>
              <p class="card-text"><%=truncate(article.description, length:100)%></p>
              <%= link_to "View", article_path(article), class: "btn btn-outline-success" %>
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
              <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
            </div>
            <div class="card-footer text-muted">Created at
              <%=time_ago_in_words(article.created_at)%>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
